datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Index {
  id String @id

  indexName String

  video Video?
}

model Video {
  id String @id

  title     String
  duration  Decimal
  size      Int
  createdAt DateTime @default(now())

  userId  String
  indexId String @unique

  index Index @relation(fields: [indexId], references: [id])
}
